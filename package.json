{
    "name": "@upradata/npx-init",
    "author": {
        "name": "Thomas Milotti",
        "email": "thomas.milotti@gmail.com",
        "url": "https://github.com/milottit"
    },
    "repository": {
        "url": "https://github.com/upradata/npx-init"
    },
    "license": "MIT",
    "version": "2.0.0",
    "description": "Customized and enhanced npm init script",
    "sideEffects": false,
    "main": "lib",
    "types": "lib-esm",
    "module": "lib-esm",
    "files": [
        "lib",
        "lib-esm"
    ],
    "bin": "bin/npx-init",
    "scripts": {
        "clean": "shx rm -rf lib lib-esm",
        "pre-build": "pnpm run clean",
        "build": "tsc -p tsconfig.json && make-bin",
        "post-build": "pnpm run test && npm run e2e",
        "watch": "pnpm run build:watch",
        "build:watch": "tsc -p tsconfig.json -w",
        "test": "pnpm jest --passWithNoTests --verbose false --config jest-ut.config.js",
        "e2e": "pnpm jest --passWithNoTests --verbose false --config jest-e2e.config.js",
        "github-push": "pnpm run build && npm version patch && git pushall && git pushall-tags",
        "npm-publish": "pnpm run build && npm publish --access public"
    },
    "dependencies": {
        "fs-extra": "^10.0.0",
        "glob": "^7.1.7",
        "init-package-json": "^2.0.4",
        "npm-package-arg": "^8.1.5",
        "prompts": "^2.4.1",
        "promzard": "^0.3.0",
        "read": "^1.0.7",
        "semver": "^7.3.5",
        "validate-npm-package-license": "^3.0.4",
        "validate-npm-package-name": "^3.0.0"
    },
    "devDependencies": {
        "@schemastore/package": "^0.0.6",
        "@types/fs-extra": "^9.0.12",
        "@types/glob": "^7.1.4",
        "@types/init-package-json": "^1.10.0",
        "@types/node": "^16.7.8",
        "@types/npm-package-arg": "^6.1.1",
        "@types/prompts": "^2.0.14",
        "@types/read": "^0.0.29",
        "@types/semver": "^7.3.8",
        "@types/validate-npm-package-license": "^3.0.1",
        "@types/validate-npm-package-name": "^3.0.3",
        "typescript": "^4.4.2"
    }
}
